{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ðŸ“¦ dotnet build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"testing-without-mocks-dotnet.sln"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/testing-without-mocks-dotnet.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/testing-without-mocks-dotnet.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/testing-without-mocks-dotnet.sln"
            ],
            "problemMatcher": "$msCompile"
        }
	]
}